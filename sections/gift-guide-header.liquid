<div class="header_main" style="background-color: {{ section.settings.header_bg }};">
  <div class="page-width">
    <div class="gift_guide_header">
        <div class="gift_guide_hambger">
          <svg class="ctm_hambger" width="20" height="13" viewBox="0 0 20 13" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M1 6.5H19" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M1 1.5H19" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M1 11.5H19" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <svg class="ctm_close" width="15" height="15" viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M1 13.9997L13.7279 1.27177" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M1 1.00031L13.7279 13.7282" stroke="black" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      <div class="gift-guide_logo">
        {% if section.settings.title != blank %}
          <h1 class="gift_guide_title">{{ section.settings.title }}</h1>
        {% endif %}
      </div>
      {% if section.settings.description != blank %}
        <div class="gift_guide_description mobile-hide">{{ section.settings.description }}</div>
      {% endif %}

      {% if section.settings.button_text != blank %}
        <div class="gift_guide_button mobile-hide">
          <a href="{{ section.settings.button_link }}" class="btn gift-btn">
           <span> {{ section.settings.button_text }}</span>
            <svg width="26" height="12" viewBox="0 0 26 12" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M1.22205 4.80469L0.472046 4.80469L0.472046 6.30469L1.22205 6.30469L1.22205 4.80469ZM25.7524 6.08502C26.0453 5.79213 26.0453 5.31725 25.7524 5.02436L20.9794 0.251388C20.6865 -0.0415053 20.2116 -0.0415053 19.9187 0.251388C19.6259 0.544281 19.6259 1.01916 19.9187 1.31205L24.1614 5.55469L19.9187 9.79733C19.6259 10.0902 19.6259 10.5651 19.9187 10.858C20.2116 11.1509 20.6865 11.1509 20.9794 10.858L25.7524 6.08502ZM1.22205 6.30469L25.222 6.30469L25.222 4.80469L1.22205 4.80469L1.22205 6.30469Z" fill="currentColor"/>
            </svg>
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</div>
<div class="gift_guide_header_mobile">
    {% if section.settings.description != blank %}
        <div class="gift_guide_description">{{ section.settings.description }}</div>
      {% endif %}

      {% if section.settings.button_text != blank %}
        <div class="gift_guide_button">
          <a href="{{ section.settings.button_link }}" class="btn gift-btn">
           <span> {{ section.settings.button_text }}</span>
            <svg width="26" height="12" viewBox="0 0 26 12" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M1.22205 4.80469L0.472046 4.80469L0.472046 6.30469L1.22205 6.30469L1.22205 4.80469ZM25.7524 6.08502C26.0453 5.79213 26.0453 5.31725 25.7524 5.02436L20.9794 0.251388C20.6865 -0.0415053 20.2116 -0.0415053 19.9187 0.251388C19.6259 0.544281 19.6259 1.01916 19.9187 1.31205L24.1614 5.55469L19.9187 9.79733C19.6259 10.0902 19.6259 10.5651 19.9187 10.858C20.2116 11.1509 20.6865 11.1509 20.9794 10.858L25.7524 6.08502ZM1.22205 6.30469L25.222 6.30469L25.222 4.80469L1.22205 4.80469L1.22205 6.30469Z" fill="currentColor"/>
            </svg>
          </a>
        </div>
      {% endif %}
  </div>

{% style %}
  .gift_guide_header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
    padding: 10px 0;
  }
  .gift_guide_title {
    margin: 0;
    text-transform: uppercase;
    font-size: 32px;
    line-height: 42.56px;
  }
  .gift_guide_description p {
    margin: 0;
    font-size: 16px;
    line-height: 13.42px;
    font-weight: 400;
    letter-spacing: 0px;
    color: #000000;
  }
  .gift-btn {
    position: relative;
    overflow: hidden;
    display: inline-flex;
    align-items: center;
    gap: 18px;
    padding: 12px 20px 12px 41px;
    background-color: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text_color }};
    font-size: 16px;
    line-height: 20.48px;
    font-weight: 400;
    text-transform: uppercase;
    text-decoration: none;
    transition: color 0.3s ease;
    z-index: 1;
}
/* create animated overlay */
.gift-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background-color: {{ section.settings.button_bg_hover }};
    transition: left 0.4s ease;
    z-index: -1;
}
/* hover animation */
.gift-btn:hover::before {
   left: 0;
}
.gift-btn:hover {
    color: {{ section.settings.button_text_hover }};
}
.gift_guide_header_mobile, .ctm_close {
        display: none;
    }
@media screen and (min-width:990px) {
    .gift_guide_header_mobile, .gift_guide_hambger {
        display: none;
    }
}
@media screen and (max-width:989px) {
    .mobile-hide {
        display: none;
    }
     .header_main {
        box-shadow: 0px 2px 4px 0px #00000026;
        position: relative;
     }
     .gift_guide_header {
            gap: 0px;
     }
     .gift-guide_logo {
        width: 100%;
        text-align: center;
     }
     .gift_guide_hambger {
        min-width: 21px;
        display: flex;
        align-items: center;
    }
    .gift_guide_header_mobile {
        background-color:#F2F2F2;
        padding:25px;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 16px;
    }
}
{% endstyle %}

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const hambger = document.querySelector('.ctm_hambger');
    const closeIcon = document.querySelector('.ctm_close');
    const mobileHeader = document.querySelector('.gift_guide_header_mobile');

    hambger.addEventListener('click', function() {
      mobileHeader.style.display = 'flex';
      hambger.style.display = 'none';
      closeIcon.style.display = 'block';
    });

    closeIcon.addEventListener('click', function() {
      mobileHeader.style.display = 'none';
      hambger.style.display = 'block';
      closeIcon.style.display = 'none';
    });
  });
</script>

